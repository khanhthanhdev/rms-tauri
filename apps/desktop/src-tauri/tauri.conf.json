{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "rms-local-desktop",
  "version": "0.1.0",
  "identifier": "com.rmslocal.desktop",
  "build": {
    "beforeDevCommand": "bun run setup",
    "beforeBuildCommand": "bun run setup",
    "frontendDist": "../placeholder-dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "RMS Local Launcher",
        "visible": true,
        "resizable": false,
        "decorations": true,
        "skipTaskbar": false,
        "width": 520,
        "height": 460
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "msi", "nsis"],
    "externalBin": ["binaries/rms-server-sidecar"],
    "resources": ["../../web/dist/**/*"],
    "windows": [
      {
        "wix": [],
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "signingIdentity": null,
        "publisher": null,
        "icons": [
          {
            "path": "icons/icon.ico",
            "sizes": [256, 128, 96, 64, 48, 32, 16]
          }
        ]
      }
    ]
  }
}
